{
    "compilerOptions": {
      "target": "ES2020",                   // Match the target ES version you're using in your tsconfig.json
      "module": "commonjs",                 // Use CommonJS for Node.js compatibility
      "allowSyntheticDefaultImports": true, // Enable default imports from modules with no default export
      "baseUrl": "./",                      // Base URL for resolving non-relative imports
      "paths": {
        "@src/*": ["src/*"]                 // Path alias for better import structure (if used)
      },
      "esModuleInterop": true,              // Interoperability between CommonJS and ES modules
      "skipLibCheck": true                  // Skip type checking of declaration files for performance
    },
    "include": ["src/**/*.js"],             // Specify which JS files to include
    "exclude": ["node_modules"]             // Exclude node_modules from being part of the configuration
  }
  